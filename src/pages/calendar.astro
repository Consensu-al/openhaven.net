  .sidebar-media {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid #e0e0e0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .last-updated {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #e0e0e0;
    font-size: 0.7rem;
    color: #999;
  }

  /* Main content */
  .main {
    flex: 1;
    padding: 1.5rem;
    overflow: auto;
    background: var(--color-bg);
  }

  /* Error state */
  :global(.error-badge) {
    display: inline-block;
    width: 8px;
    height: 8px;
    background: #d32f2f;
    border-radius: 50%;
    margin-left: 0.5rem;
  }

  /* Modal */
  .modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .modal-overlay.active {
    display: flex;
  }

  .modal {
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
    max-width: 500px;
    width: 100%;
    max-height: 80vh;
    overflow-y: auto;
    padding: 1.5rem;
    position: relative;
  }

  .modal-close {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: none;
    border: none;
    font-size: 1.5rem;
    color: #999;
    cursor: pointer;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: all 0.15s;
  }

  .modal-close:hover {
    background: #f0f0f0;
    color: #333;
  }

  .modal-title {
    font-size: 1.25rem;
    color: var(--color-accent-text);
    margin-bottom: 1rem;
    padding-right: 2rem;
  }

  .modal-meta {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .modal-time {
    font-size: 0.9rem;
    color: #333;
    margin-bottom: 0.25rem;
  }

  .modal-location {
    font-size: 0.85rem;
    color: #666;
  }

  .modal-location:empty {
    display: none;
  }

  .modal-description {
    font-size: 0.9rem;
    color: #444;
    line-height: 1.6;
    white-space: pre-wrap;
    margin-bottom: 1rem;
  }

  .modal-description:empty {
    display: none;
  }

  .modal-link {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--color-accent-text);
    color: white;
    border-radius: 4px;
    font-size: 0.85rem;
    text-decoration: none;
    border-bottom: none;
    transition: all 0.15s;
  }

  .modal-link:hover {
    background: #6d370f;
    border-bottom: none;
  }

  .modal-link.hidden {
    display: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .calendar-container {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      border-right: none;
      border-bottom: 1px solid #e0e0e0;
    }

    .calendar-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    :global(.calendar-item) {
      padding: 0.4rem 0.75rem;
      background: var(--color-bg);
      border-radius: 4px;
      border: 1px solid #e0e0e0;
    }
  }
</style>

