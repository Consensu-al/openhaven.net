---
import Layout from "../layouts/Layout.astro";
import RandomImage from "../components/RandomImage.astro";
import SoundCloudPlayer from "../components/SoundCloudPlayer.astro";
import calendarsData from "../data/calendars.json";

// Fetch raw ICS at build time (solves CORS), parsing happens client-side
const calendarsWithICS = await Promise.all(
  calendarsData.calendars.map(async (cal) => {
    try {
      const response = await fetch(cal.url);
      if (!response.ok) {
        console.error(`Failed to fetch ${cal.name}: HTTP ${response.status}`);
        return { ...cal, icsData: null, error: true };
      }
      const icsData = await response.text();
      return { ...cal, icsData, error: false };
    } catch (err) {
      console.error(`Failed to fetch ${cal.name}:`, err);
      return { ...cal, icsData: null, error: true };
    }
  })
);

const buildTime = new Date().toISOString();
---

<Layout title="NAO Calendar" description="Aggregated sub-group events for NAO">
  <main class="calendar-page">
    <div class="calendar-container">
      <aside class="sidebar">
        <h1>NAO Calendar</h1>
        <p class="sidebar-subtitle">Aggregated sub-group events</p>

        <ul class="calendar-list" id="calendar-list"></ul>

        <div class="sidebar-actions">
          <button id="show-all-btn">Show All</button>
          <button id="hide-all-btn">Hide All</button>
        </div>

        <div class="sidebar-media">
          <RandomImage class="sidebar-image" />
          <SoundCloudPlayer class="sidebar-player" />
        </div>

        <p class="last-updated">Updated: {new Date(buildTime).toLocaleString('en-US', { month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' })}</p>
      </aside>

      <div class="main">
        <div id="calendar"></div>
      </div>
    </div>

    <!-- Event Details Modal -->
    <div class="modal-overlay" id="modal-overlay">
      <div class="modal">
        <button class="modal-close" id="modal-close" aria-label="Close">&times;</button>
        <h2 class="modal-title" id="modal-title"></h2>
        <div class="modal-meta">
          <p class="modal-time" id="modal-time"></p>
          <p class="modal-location" id="modal-location"></p>
        </div>
        <p class="modal-description" id="modal-description"></p>
        <a class="modal-link" id="modal-link" href="#" target="_blank" rel="noopener">Open Link</a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .calendar-page {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .calendar-container {
    display: flex;
    flex: 1;
    min-height: calc(100vh - 100px);
  }

  /* Sidebar */
  .sidebar {
    width: 260px;
    background: white;
    border-right: 1px solid #e0e0e0;
    padding: 1.5rem;
    flex-shrink: 0;
    box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
