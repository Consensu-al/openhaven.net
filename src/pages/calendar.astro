<!-- Embed raw ICS data (fetched at build time to avoid CORS) -->
<script id="calendar-data" type="application/json" set:html={JSON.stringify(calendarsWithICS)}></script>

<!-- FullCalendar CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" />

<!-- FullCalendar JS + iCalendar plugin -->
<script is:inline src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/@fullcalendar/icalendar@6.1.10/index.global.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/ical.js@1.5.0/build/ical.min.js"></script>

<script is:inline>
  // Load pre-fetched calendar data (ICS fetched at build time)
  const CALENDARS = JSON.parse(document.getElementById('calendar-data').textContent);

  let calendar;
  const calendarState = new Map();

  document.addEventListener('DOMContentLoaded', () => {
    initCalendar();
    initSidebar();
    initModal();
    loadAllCalendars();
  });

  function initCalendar() {
    const calendarEl = document.getElementById('calendar');

    calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      headerToolbar: {
        left: 'prev,next today',
        center: 'title',
        right: 'dayGridMonth,timeGridWeek,listMonth'
      },
      height: 'auto',
      eventClick: (info) => {
        info.jsEvent.preventDefault();
        showModal(info.event);
      },
      eventDidMount: (info) => {
        if (info.event.extendedProps.description) {
          info.el.title = info.event.extendedProps.description;
        }
      }
    });

    calendar.render();
  }

  function initSidebar() {
    const listEl = document.getElementById('calendar-list');

    CALENDARS.forEach(cal => {
      calendarState.set(cal.id, {
        visible: cal.defaultVisible,
        events: [],
        error: cal.error || false
      });

      const li = document.createElement('li');
      li.className = 'calendar-item';
      li.innerHTML = `
        <label style="display: flex; align-items: center; cursor: pointer; width: 100%;">
          <input type="checkbox"
                 id="cal-${cal.id}"
                 ${cal.defaultVisible ? 'checked' : ''}>
          <span class="checkbox" style="background: ${cal.color}">
            <svg viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="3">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </span>
          <span class="name">${cal.name}</span>
          <span class="error-badge" id="error-${cal.id}" style="display: ${cal.error ? 'inline-block' : 'none'};" title="Failed to load"></span>
        </label>
      `;

      li.querySelector('input').addEventListener('change', (e) => {
        toggleCalendar(cal.id, e.target.checked);
      });

      listEl.appendChild(li);
    });

    document.getElementById('show-all-btn').addEventListener('click', () => toggleAll(true));
    document.getElementById('hide-all-btn').addEventListener('click', () => toggleAll(false));
  }

  function loadAllCalendars() {
    // Parse ICS and add event sources for each calendar
    CALENDARS.forEach(cal => {
      if (!cal.icsData) return;

      const state = calendarState.get(cal.id);

      // Parse ICS and create events on-demand for visible range
      try {
        const events = parseICSForRange(cal.icsData, cal);
        state.events = events;

        if (state.visible) {
          addEventsToCalendar(cal.id, events);
        }
      } catch (err) {
        console.error(`Failed to parse ${cal.name}:`, err);
        state.error = true;
        const errorBadge = document.getElementById(`error-${cal.id}`);
        if (errorBadge) errorBadge.style.display = 'inline-block';
      }
    });

    // Re-parse when navigating to new date ranges
    calendar.on('datesSet', () => {
      CALENDARS.forEach(cal => {
        if (!cal.icsData) return;
        const state = calendarState.get(cal.id);
        if (!state.visible) return;

        // Remove old events and re-parse for new range
        removeEventsFromCalendar(cal.id);
        const events = parseICSForRange(cal.icsData, cal);
        state.events = events;
        addEventsToCalendar(cal.id, events);
      });
    });
  }

  function parseICSForRange(icsText, cal) {
    const events = [];
    const view = calendar.view;
    const rangeStart = ICAL.Time.fromJSDate(view.activeStart);
    const rangeEnd = ICAL.Time.fromJSDate(view.activeEnd);

    try {
      const jcalData = ICAL.parse(icsText);
      const comp = new ICAL.Component(jcalData);
      const vevents = comp.getAllSubcomponents('vevent');

      vevents.forEach(vevent => {
        const event = new ICAL.Event(vevent);

        const baseEvent = {
          title: event.summary || 'Untitled',
          allDay: event.startDate.isDate,
          backgroundColor: cal.color,
          borderColor: cal.color,
          extendedProps: {
            calendarId: cal.id,
            description: event.description || '',
            location: event.location || ''
          }
        };

        // Extract URL
        const urlProp = vevent.getFirstPropertyValue('url');
        if (urlProp) {
          baseEvent.url = urlProp;
        } else {
          const urlMatch = (event.description || '').match(/https?:\/\/[^\s<>"{}|\\^`\[\]]+/i);
          if (urlMatch) baseEvent.url = urlMatch[0];
        }

        if (event.isRecurring()) {
          // Expand recurrences only for visible range
          const iterator = event.iterator();
          let next;
          let count = 0;

          while ((next = iterator.next()) && count < 200) {
            // Stop if past visible range
            if (next.compare(rangeEnd) > 0) break;

            // Skip if before visible range
            if (next.compare(rangeStart) < 0) {
              // But still count to avoid infinite loops on old events
              count++;
              continue;
            }

            const fcEvent = { ...baseEvent };
            fcEvent.id = `${cal.id}-${event.uid}-${count}`;
            fcEvent.start = next.toJSDate();

            if (event.endDate) {
              const duration = event.endDate.subtractDate(event.startDate);
              const newEnd = next.clone();
              newEnd.addDuration(duration);
              fcEvent.end = newEnd.toJSDate();
            }

            events.push(fcEvent);
            count++;
          }
        } else {
          // Single event - check if in range
          const eventStart = event.startDate;
          const eventEnd = event.endDate || eventStart;

          if (eventEnd.compare(rangeStart) >= 0 && eventStart.compare(rangeEnd) <= 0) {
            const fcEvent = { ...baseEvent };
            fcEvent.id = `${cal.id}-${event.uid}`;
            fcEvent.start = event.startDate.toJSDate();
            fcEvent.end = event.endDate ? event.endDate.toJSDate() : null;
            events.push(fcEvent);
          }
        }
      });
    } catch (err) {
      console.error('Failed to parse ICS:', err);
    }

    return events;
  }

  function addEventsToCalendar(calId, events) {
    events.forEach(event => {
      calendar.addEvent(event);
    });
  }

  function removeEventsFromCalendar(calId) {
    const events = calendar.getEvents();
    events.forEach(event => {
      if (event.extendedProps.calendarId === calId) {
        event.remove();
      }
    });
  }

  function toggleCalendar(calId, visible) {
    const state = calendarState.get(calId);
    state.visible = visible;

    if (visible) {
      addEventsToCalendar(calId, state.events);
    } else {
      removeEventsFromCalendar(calId);
    }
  }

  function toggleAll(visible) {
    CALENDARS.forEach(cal => {
      const checkbox = document.getElementById(`cal-${cal.id}`);
      checkbox.checked = visible;
      toggleCalendar(cal.id, visible);
    });
  }

  // =========================================
  // UTILITIES
  // =========================================

  function linkifyText(text) {
    // Escape HTML first to prevent XSS
    const escaped = text
      .replace(/&/g, '&amp;')
      .replace(/</g, '&lt;')
      .replace(/>/g, '&gt;')
      .replace(/"/g, '&quot;');

    // Convert URLs to clickable links
    const urlRegex = /(https?:\/\/[^\s<>"{}|\\^`\[\]]+)/gi;
    return escaped.replace(urlRegex, '<a href="$1" target="_blank" rel="noopener">$1</a>');
  }

  // =========================================
  // MODAL
  // =========================================

  function initModal() {
    const overlay = document.getElementById('modal-overlay');
    const closeBtn = document.getElementById('modal-close');

    // Close on overlay click
    overlay.addEventListener('click', (e) => {
      if (e.target === overlay) {
        hideModal();
      }
    });

    // Close on button click
    closeBtn.addEventListener('click', hideModal);

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        hideModal();
      }
    });
  }

  function showModal(event) {
    const overlay = document.getElementById('modal-overlay');
    const titleEl = document.getElementById('modal-title');
    const timeEl = document.getElementById('modal-time');
    const locationEl = document.getElementById('modal-location');
    const descriptionEl = document.getElementById('modal-description');
    const linkEl = document.getElementById('modal-link');

    // Set title
    titleEl.textContent = event.title;

    // Format time
    const start = event.start;
    const end = event.end;
    let timeStr = '';

    if (event.allDay) {
      timeStr = start.toLocaleDateString('en-US', {
        weekday: 'long',
        month: 'long',
        day: 'numeric',
        year: 'numeric'
      });
      if (end && end.getTime() !== start.getTime()) {
        const endDate = new Date(end.getTime() - 86400000); // Subtract 1 day for all-day end
        if (endDate.getTime() !== start.getTime()) {
          timeStr += ' – ' + endDate.toLocaleDateString('en-US', {
            weekday: 'long',
            month: 'long',
            day: 'numeric',
            year: 'numeric'
          });
        }
      }
    } else {
      timeStr = start.toLocaleDateString('en-US', {
        weekday: 'long',
        month: 'long',
        day: 'numeric',
        year: 'numeric'
      });
      timeStr += ' at ' + start.toLocaleTimeString('en-US', {
        hour: 'numeric',
        minute: '2-digit'
      });
      if (end) {
        timeStr += ' – ' + end.toLocaleTimeString('en-US', {
          hour: 'numeric',
          minute: '2-digit'
        });
      }
    }
    timeEl.textContent = timeStr;

    // Set location
    const location = event.extendedProps.location || '';
    locationEl.textContent = location;

    // Set description (with clickable links)
    const description = event.extendedProps.description || '';
    descriptionEl.innerHTML = linkifyText(description);

    // Set link
    if (event.url) {
      linkEl.href = event.url;
      linkEl.classList.remove('hidden');
    } else {
      linkEl.classList.add('hidden');
    }

    // Show modal
    overlay.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function hideModal() {
    const overlay = document.getElementById('modal-overlay');
    overlay.classList.remove('active');
    document.body.style.overflow = '';
  }
</script>
